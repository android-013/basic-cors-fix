# Environment: development | production
NODE_ENV=development

# Ports
PORT_LOCAL=4000
PORT_PROD=8080

# Frontend origins (must match EXACTLY: scheme + host + port)
CLIENT_ORIGIN_LOCAL=http://localhost:5173
CLIENT_ORIGIN_PROD=https://yourdomain.com

# CORS control: broken | fixed
CORS_MODE=broken

# Used only in broken mode (to force a CORS failure)
BROKEN_ORIGIN=http://localhost:3000
